{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <form class="form-signin" action="{{ path('security_registration') }}" method="post">
        <h1 class="h3 mb-3 font-weight-normal">Inscription !</h1>
        {{ form_start(form) }}
        {{ form_row(form.firstName, {'label':false,'attr' : {'placeholder': 'Pr√©nom', 'class':'form-control'}}) }}
        {{ form_row(form.name, {'label':false,'attr' : {'placeholder': 'Nom de famille', 'class':'form-control'}}) }}
        {{ form_row(form.username, {'label':false,'attr' : {'placeholder': 'Pseudo', 'class':'form-control'}}) }}
        {{ form_row(form.email, {'label':false,'attr' : {'placeholder': 'Adresse mail', 'class':'form-control'}}) }}
        {{ form_row(form.password, {'label':false,'attr' : {'placeholder': 'Nouveau mot de passe', 'class':'form-control'}}) }}
        {{ form_row(form.confirm_password, {'label':false,'attr' : {'placeholder': 'Confirmation mot de passe', 'class':'form-control'}}) }}
        {{ form_row(form.birthdate, {'label':'Date de naissance'}) }}
        {{ form_row(form.gender, {'label':'Genre', 'attr' : {'type' : 'radio'}}) }}

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
{{ form_end(form) }}

        <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
    </form>
    <a href="{{ path('security_login') }}">Connexion</a>
</div>
            



{% endblock %}