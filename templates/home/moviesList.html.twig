{% extends 'base.html.twig' %}
{% block body %}
 {{ parent() }}
{% endblock %}

{% block content %}
<h4>{{ pageName }} </h4>
{% for movie in movies.results %}


    <div class="row ">
        <div class="col">
          <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
              <h3 class="mb-0">
                <a class="text-dark" href="{{ path('movie', {'id':movie.id }) }}">{{movie.title}}</a>
              </h3>
              <div class="mb-1 text-muted">{{ movie.release_date }}</div>
              <p class="card-text mb-auto">{{movie.overview}}</p>
            </div>
            <a href="{{ path('movie', {'id':movie.id }) }}" class="mousehover over_a">
              <img class="card-img-right flex-auto d-none d-md-block" src="https://image.tmdb.org/t/p/w185/{{ movie.poster_path }}"  alt="">
              <i class="over_i fas fa-search fa-2x" ></i>
              
            </a>
          </div>
        </div>
        </div>
{% endfor %}
<div style="text-align:center;">
  {% if pageType == "gender" %}
      {% if movies.page != 1 %}
      <a href="{{ path('genre', {'id':id , 'name':pageName , 'page':movies.page - 1 }) }}" >page précédente   </a>
      {% endif %}
      <strong>{{ movies.page }}</strong>

        <a href="{{ path('genre', {'id':id , 'name':pageName , 'page':movies.page + 1 }) }}" >   page suivante </a>

  {% else %}
     {% if movies.page != 1 %}
      <a href="{{ path('specialDisplay', {'id':id , 'data':pageName , 'page':movies.page - 1 }) }}" >page précédente   </a>
      {% endif %}
      <strong>{{ movies.page }}</strong>

        <a href="{{ path('specialDisplay', {'id':id , 'data':pageName , 'page':movies.page + 1 }) }}" >   page suivante </a>
  {% endif %}
</div>
{% endblock %}

